@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<section>
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header" style="background-color: #5bc0de;">
                    <button type="button" class="btnclose close" data-dismiss="modal" data-target="#btn_cancel">&times;</button>
                    <h4 class="modal-title"><span class="glyphicon glyphicon-lock"></span> Login</h4>
                </div>
                <div class="modal-body">
                    <form method="post">
                        <div class="row">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="col-md-12 form-group">
                                <span class="glyphicon glyphicon-user"></span> <label asp-for="Input.Email"></label>
                                <input asp-for="Input.Email" class="form-control" id="Email" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="col-md-12 form-group">
                                <span class="glyphicon glyphicon-eye-open"></span> <label asp-for="Input.Password"></label>
                                <input asp-for="Input.Password" class="form-control" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="col-md-12 form-group">
                                <div class="checkbox">
                                    <label asp-for="Input.RememberMe">
                                        <input asp-for="Input.RememberMe" />
                                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-12 form-group">
                                <button type="submit" class="btn btn-info btn-block"><span class="glyphicon glyphicon-off"></span> Log in</button>
                            </div>
                        </div>
                    </form>
                </div>
                    <div class="modal-footer" style="background-color: #f9f9f9;">
                        <div class="row">
                            <div class="col-lg-12 form-group">
                                <button id="btn_cancel" type="submit" class="btn btn-success pull-left btnclose" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> Cancelar</button>
                                <div>No tienes una <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Cuenta?</a></div>
                                <div>Olvid&oacute; su <a asp-page="./ForgotPassword">Password?</a></div>
                            </div>
                        </div>
                    </div>
                </div>
        </div>
    </div>
</section>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script>
        $(document).ready(function () {
            $("#myModal").modal({ backdrop: "static" });
            $("#myModal").on("shown.bs.modal", function () {
                $("#Email").focus();
            });

            $(".btnclose").click(
                function () { window.location.href = '/' }
            );
        });
    </script>
}